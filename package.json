{
  "name": "soranix",
  "version": "1.0.0",
  "description": "Soranix is a AI powered operating system for finance ",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "start:apps": "turbo run dev --filter=./apps/*",
    "start:services": "turbo run dev --filter=./services/*",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "start:env": "node scripts/start.js",
    "prepare": "husky",
    "commitlint": " commitlint --edit -c  ",
    "commit": "commit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soranix-inc/soranix.git"
  },
  "keywords": [
    "Finance",
    "AI",
    "Budget"
  ],
  "author": "Soranix",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Soranix-inc/soranix/issues"
  },
  "packageManager": "npm@11.4.1",
  "homepage": "https://github.com/Soranix-inc/soranix#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@commitlint/prompt-cli": "^19.8.1",
    "@soranix/client": "^0.1.0",
    "@types/node": "^24.0.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25"
  }
}
